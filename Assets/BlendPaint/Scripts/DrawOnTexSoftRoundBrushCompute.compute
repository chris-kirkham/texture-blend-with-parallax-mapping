// Each #kernel tells which function to compile; you can have many kernels
#pragma kernel DrawOnTex
#define GROUP_SIZE 8
float4 brushColour;
uint brushHalfSize;
float brushStrength;
uint2 brushCentre;

Texture2D<float4> inputTex;
RWTexture2D<float4> Result;

[numthreads(GROUP_SIZE, GROUP_SIZE, 1)]
void DrawOnTex (uint3 id : SV_DispatchThreadID)
{
    //TEST

    //get distance from brush centre; change tex colour based on brush distance/opacity (will only work for default soft round brush)
    float opacity = 1 - (distance(id.xy, brushCentre) / brushHalfSize);
    Result[id.xy] = lerp(inputTex[id.xy], brushColour, opacity * saturate(brushStrength));
    //Result[id.xy] = float4(opacity, 0, 0, 1);
}
